{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "TitleStyle",
	"slug": "TitleStyle",
	"blockTypes": [ "core/post-title" ],
	"styles": {
        "color": {
            "text": "#FFFFFF"
        },
		"background": {
            "backgroundImage": "linear-gradient(135deg, rgb(95, 45, 146) 0%, rgb(243, 29, 119) 100%)"
        },
        "typography": {
            "fontFamily": "AnonymousPro",
            "fontSize": "3rem",
            "fontWeight": "Bold",
            "textAlign": "center"
        },
        "spacing": {
            "padding": {
                "top":"1rem",
                "bottom":"1rem"
            }
        }
    }   
}